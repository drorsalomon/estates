    meta(name="robots" content="index, follow")
    link(rel="canonical" href="https://www.dirabulgarit.co.il/en/qanda")
    link(rel="alternate" href="https://www.dirabulgarit.co.il/en/qanda" hreflang="en")
    link(rel="alternate" href="https://www.dirabulgarit.co.il/qanda" hreflang="he")
    link(rel="alternate" href="https://www.dirabulgarit.co.il/ru/qanda" hreflang="ru")

